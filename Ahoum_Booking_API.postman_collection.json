{
  "info": {
    "name": "Ahoum Booking API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"test123\",\n  \"name\": \"Test User\"\n}"
        },
        "url": { "raw": "http://localhost:5000/register", "host": ["localhost"], "port": "5000", "path": ["register"], "protocol": "http" }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"test123\"\n}"
        },
        "url": { "raw": "http://localhost:5000/login", "host": ["localhost"], "port": "5000", "path": ["login"], "protocol": "http" }
      }
    },
    {
      "name": "Get Events",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:5000/events", "host": ["localhost"], "port": "5000", "path": ["events"], "protocol": "http" }
      }
    },
    {
      "name": "Nearby Events",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/events/nearby?lat=28.6139&lng=77.2090&radius=100",
          "host": ["localhost"],
          "port": "5000",
          "path": ["events", "nearby"],
          "query": [
            { "key": "lat", "value": "28.6139" },
            { "key": "lng", "value": "77.2090" },
            { "key": "radius", "value": "100" }
          ],
          "protocol": "http"
        }
      }
    },
    {
      "name": "Update/Reschedule Event",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Yoga Session\",\n  \"date\": \"2025-07-15T10:00:00\",\n  \"status\": \"rescheduled\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/events/2",
          "host": ["localhost"],
          "port": "5000",
          "path": ["events", "2"],
          "protocol": "http"
        }
      }
    },
    {
      "name": "Cancel Event (Soft Delete)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/events/2",
          "host": ["localhost"],
          "port": "5000",
          "path": ["events", "2"],
          "protocol": "http"
        }
      }
    },
    {
      "name": "Book Event",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\n  \"event_id\": 1\n}" },
        "url": {
          "raw": "http://localhost:5000/book",
          "host": ["localhost"],
          "port": "5000",
          "path": ["book"],
          "protocol": "http"
        }
      }
    },
    {
      "name": "View My Bookings",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/my-bookings",
          "host": ["localhost"],
          "port": "5000",
          "path": ["my-bookings"],
          "protocol": "http"
        }
      }
    },
    {
      "name": "Cancel Booking",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "http://localhost:5000/cancel-booking/1",
          "host": ["localhost"],
          "port": "5000",
          "path": ["cancel-booking", "1"],
          "protocol": "http"
        }
      }
    }
  ]
}
